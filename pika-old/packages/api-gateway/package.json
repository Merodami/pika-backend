{
  "name": "@pika/api-gateway",
  "version": "0.0.0",
  "private": true,
  "description": "API Gateway with rate limiting and common middleware for services",
  "author": "Damian Meroni (@merodami)",
  "type": "module",
  "main": "dist/application/api/server.js",
  "types": "index.d.ts",
  "dependencies": {
    "@fastify/http-proxy": "^11.3.0",
    "@pika/http": "workspace:^",
    "@pika/redis": "workspace:^",
    "@pika/shared": "workspace:^",
    "fastify": "^5.4.0"
  },
  "devDependencies": {
    "@types/node": "^24.0.7",
    "typescript": "^5.8.3"
  },
  "depcheck": {
    "ignore": [
      "nx",
      "ts-node",
      "tsconfig-paths"
    ],
    "parsers": {
      "**/*.ts": "typescript"
    },
    "detectors": [
      "requireCallExpression",
      "importDeclaration",
      "typescriptImportEqualsDeclaration"
    ]
  }
}
