{
  "name": "@pika/notification",
  "$schema": "../../../../node_modules/nx/schemas/project-schema.json",
  "implicitDependencies": [
    "@pika/shared",
    "@pika/types-core",
    "@pika/http",
    "@pika/environment"
  ],
  "targets": {
    "typecheck": {
      "executor": "nx:run-commands",
      "options": {
        "command": "tsc -p tsconfig.json --noEmit",
        "cwd": "{projectRoot}"
      }
    },
    "test": {
      "executor": "nx:run-commands",
      "options": {
        "command": "vitest run",
        "cwd": "{projectRoot}"
      }
    },
    "test:watch": {
      "executor": "nx:run-commands",
      "options": {
        "command": "vitest",
        "cwd": "{projectRoot}"
      }
    },
    "depcheck": {
      "executor": "nx:run-commands",
      "options": {
        "command": "yarn knip --workspace={projectName}",
        "cwd": "{projectRoot}"
      }
    },
    "build:prod": {
      "executor": "nx:run-commands",
      "options": {
        "command": "rm -rf dist && tsc -p tsconfig.build.json && tsc-alias -p tsconfig.build.json",
        "cwd": "{projectRoot}"
      },
      "outputs": ["{projectRoot}/dist"]
    },
    "build": {
      "executor": "nx:run-commands",
      "options": {
        "command": "rm -rf dist && tsc -p tsconfig.json && tsc-alias -p tsconfig.json",
        "cwd": "{projectRoot}"
      },
      "outputs": ["{projectRoot}/dist"]
    },
    "local": {
      "executor": "nx:run-commands",
      "options": {
        "command": "tsx --watch ./src/index.ts",
        "cwd": "{projectRoot}"
      }
    }
  }
}
