{
  "extends": "../../../tsconfig.json",
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": "src",
    "composite": true,
    "tsBuildInfoFile": "dist/.tsbuildinfo",
    "baseUrl": ".",
    "paths": {
      "@communication-read/*": ["src/read/*"],
      "@communication-write/*": ["src/write/*"],
      "@communication-shared/*": ["src/shared/*"],
      "@communication/*": ["src/*"]
    }
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "**/*.test.ts", "**/test/**", "**/*.spec.ts"],
  "references": [
    {
      "path": "../../types"
    },
    {
      "path": "../../shared"
    },
    {
      "path": "../../sdk"
    },
    {
      "path": "../../api"
    },
    {
      "path": "../../database"
    },
    {
      "path": "../../auth"
    },
    {
      "path": "../../http"
    },
    {
      "path": "../../tests"
    },
    {
      "path": "../../redis"
    }
  ]
}
