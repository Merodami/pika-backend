{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "lib": ["ES2022", "dom"],
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "useUnknownInCatchVariables": false,
    "isolatedModules": true,
    "newLine": "lf",
    "declaration": true,
    "declarationMap": true,
    "incremental": true,
    "sourceMap": true,
    "noEmit": false,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "baseUrl": ".",
    "paths": {
      "@shared/*": ["packages/shared/src/*"],
      "@api/*": ["packages/api/src/*"],
      "@types/*": ["packages/types/src/*"],
      "@sdk/*": ["packages/sdk/src/*"],
      "@api-gateway/*": ["packages/api-gateway/src/*"],
      "@database/*": ["packages/database/src/*"],
      "@redis/*": ["packages/redis/src/*"],
      "@http/*": ["packages/http/src/*"],
      "@auth/*": ["packages/auth/src/*"],
      "@tests/*": ["packages/tests/src/*"],
      "@environment/*": ["packages/environment/src/*"],
      "@pika/shared": ["packages/shared/src"],
      "@pikapi": ["packages/api/src"],
      "@pikaypes": ["packages/types/src"],
      "@pikadk": ["packages/sdk/src"],
      "@pikattp": ["packages/http/src"],
      "@pikaedis": ["packages/redis/src"],
      "@pikauth": ["packages/auth/src"],
      "@pikaatabase": ["packages/database/src"],
      "@pikanvironment": ["packages/environment/src"],
      "@pikaests": ["packages/tests/src"],
      "@pikaser": ["packages/services/user/src"],
      "@pikauth-service": ["packages/services/auth/src"],
      "@pikaubscription": ["packages/services/subscription/src"],
      "@pikaayment": ["packages/services/payment/src"],
      "@pikaommunication": ["packages/services/communication/src"],
      "@pikaupport": ["packages/services/support/src"],
      "@pikatorage": ["packages/services/storage/src"]
    }
  },
  "exclude": ["**/dist", "node_modules", "previous-architecture", "ai"],
  "references": [
    // Core packages
    { "path": "packages/types" },
    { "path": "packages/shared" },
    { "path": "packages/environment" },
    // Infrastructure
    { "path": "packages/database" },
    { "path": "packages/redis" },
    { "path": "packages/http" },
    { "path": "packages/auth" },
    // API and SDK
    { "path": "packages/api" },
    { "path": "packages/sdk" },
    { "path": "packages/api-gateway" },
    // Testing
    { "path": "packages/tests" },
    // Services
    { "path": "packages/services/user" },
    { "path": "packages/services/auth" },
    { "path": "packages/services/subscription" },
    { "path": "packages/services/payment" },
    { "path": "packages/services/communication" },
    { "path": "packages/services/support" },
    { "path": "packages/services/storage" }
  ]
}
